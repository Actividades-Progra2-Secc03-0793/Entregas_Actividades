@model GeoMedia_Proyecto.Models.tblUsuario

@{
    ViewBag.Title = "Detalles";
    if (Session["sesion"] == null)
    {
        Response.Redirect("~/GeoHome/Index");
    }
}
<div style="width: 98%; margin: auto">
    <h2>@ViewBag.Title</h2>

    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nomUsuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.pass)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.pass)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Apellido)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Correo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Correo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefono)
            </dd>

            <dt>
                Rol
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblRole.nomRol)
            </dd>

        </dl>
    </div>
    <p>
        @{
            if (Session["sesion"] != null)
            {
                if (Session["idRol"].Equals(1))
                {
                    @Html.ActionLink("Editar", "Edit", new { id = Model.idUsuario }, htmlAttributes: new { @class = "btn btn-primary" }) 
                    @Html.ActionLink("Regresar", "Index", new { @area = "" }, htmlAttributes: new { @class = "btn btn-default" })
                }
                else if (Session["idRol"].Equals(2))
                {
                    @Html.ActionLink("Editar", "Edit", new { id = Model.idUsuario }, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Regresar", "Index", "GeoHome", new { @area = "" }, htmlAttributes: new { @class = "btn btn-default" })
                }
            }
        }
    </p>
</div>