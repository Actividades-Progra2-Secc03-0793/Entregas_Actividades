@model GeoMedia_Proyecto.Models.tblRegistroAlquiler

@{
    ViewBag.Title = "Edit";
    if (Session["sesion"] == null)
    {
        Response.Redirect("~/GeoHome/Index");
    }
    else
    {
        if (Session["idRol"].Equals(2))
        {
            Response.Redirect("~/GeoHome/Index");
        }
    }
}

<h2>Edit</h2>

