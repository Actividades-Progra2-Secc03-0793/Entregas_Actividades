@model GeoMedia_Proyecto.Models.tblUsuario

@{
    ViewBag.Title = "Borrar";
}

<div style="width: 98%; margin: auto">
    <h2>@ViewBag.Title Usuario</h2>

    <h3>Esta seguro de eliminar el registro?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Usuario
            </dt>

            <dd>
                @Html.DisplayFor(model => model.nomUsuario)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.pass)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.pass)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Apellido)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Correo)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Correo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Telefono)
            </dd>

            <dt>
                Rol
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tblRole.nomRol)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Borrar" class="btn btn-danger" /> |
                <input type="button" value="Regresar" class="btn btn-default" onclick="document.location.href='@Url.Content("~/tblUsuarios/Index")'" />
            </div>
        }
    </div>
</div>