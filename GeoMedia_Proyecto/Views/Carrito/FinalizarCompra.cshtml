
@{
    ViewBag.Title = "Registro Compra";
    int idUsuario = Convert.ToInt32(Session["idUsuario"]);

    if (Session["sesion"] == null || ViewBag.Mensaje == "")
    {
        Response.Redirect("~/GeoHome/Index");
    }
}



<div style="background-color: #003155; height: 100vh; overflow: hidden;">
    <div style="background-color: white; border-radius: 10px; width: 90%; height: 85vh; margin-left: auto; margin-right: auto; margin-top: 20px;">

        <h2 style="color: #003155; font-size: 85pt; text-align: center; padding: 0.25em; overflow: hidden;">ViewBag.Title</h2>

        <center>
            <img src="https://d1nhio0ox7pgb.cloudfront.net/_img/g_collection_png/standard/512x512/information.png" alt="Information.png" width="100" height="100"/>
        </center>

        <div>
            <p style="font-size: 25pt; padding: 2em; text-align: center">@ViewBag.Mensaje</p>
        </div>
        <div style="text-align: center">
            <a href="~/GeoHome/Index" style="background-color: white; color: black; text-decoration: none;">
                <div style="text-align: center; border-radius: 5px; padding: 0.50em; margin: 0.50em; font-size: 14pt; border: 1px solid #808080; ">
                    Regresar
                </div>
            </a> 
            
            <a href="~/Carrito/MiHistorial/@idUsuario" style="color: white; text-decoration: none;">
                <div style="text-align: center;  background-color: blueviolet; border-radius: 5px; padding: 0.50em; margin: 0.50em; font-size: 14pt; ">
                    Ver mis alquileres
                </div>
            </a>
            
            
        </div>
    </div>
</div>

