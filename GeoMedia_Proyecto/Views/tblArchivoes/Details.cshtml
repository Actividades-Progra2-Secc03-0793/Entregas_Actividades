@model GeoMedia_Proyecto.Models.tblArchivo

@{
    ViewBag.Title = "Detalles";
    if (Session["sesion"] == null)
    {
        Response.Redirect("~/GeoHome/Index");
    }
    else
    {
        if (Session["idRol"].Equals(2))
        {
            Response.Redirect("~/GeoHome/Index");
        }
    }
}

<div style="width: 98%; margin: auto">
    <h2>Detailles del Producto</h2>

    <div>
        <hr />
        <table>
            <tr>
                <td align="center" width="5%">
                    <img src="@Html.DisplayFor(model => model.ruta)" alt="Imagen-Producto" width="250" height="371"/>
                </td>
                <td width="95%">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.titulo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.titulo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.formato)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.formato)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.precio)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.precio)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.detalles)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.detalles)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.sinopsis)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.sinopsis)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tblCategoria.categoria)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tblCategoria.categoria)
                        </dd>

                        <dt>
                            tipo de archivo
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tblTiposFile.nomTipoFile)
                        </dd>

                    </dl>
                </td>
            </tr>
        </table>

    </div>
    <br />
    <p>
        @Html.ActionLink("Editar", "Edit", new { id = Model.idArchivo }, htmlAttributes: new { @class = "btn btn-primary" }) |
        <input type="button" value="Regresar" class="btn btn-default" onclick="document.location.href='@Url.Content("~/tblArchivoes/Index")'" />
    </p>
</div>